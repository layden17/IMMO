</div>
<table border="1" class="table table-striped table-bordered" style="border-collapse:collapse;">
    <thead>
    <th>Prenom</th>
    <th>Nom</th>
    <th>Email</th>
    <th>Type</th>
    <th>Adresse</th>
    <th>Tel</th>
    <th>Dette</th>
    <th>Piece d'identitÃ©</th>
    </thead>
    <tbody>
    {% for client in dataClient %}
    <tr>
        <td>{{client.prenom }}</td>
        <td>{{client.nom }}</td>
        <td>{{client.email}}</td>
        <td>{{client.type}}</td>
        <td>{{client.adresse}}</td>
        <td>{{client.tel }}</td>
        <td>{{client.dette }}</td>
        <td>{{client.piece_ID }}</td>
        <td><a class ="btn btn-sm btn-info" href="{% url 'ClientApp:update_customer' client.id %}">modifier</a></td>
