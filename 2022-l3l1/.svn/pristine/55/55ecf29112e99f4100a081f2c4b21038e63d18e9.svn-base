<!-- Cette page affiche l'historique des prix d'achat par quintal pour un produit donné.
     Elle utilise une table HTML pour afficher les informations. -->

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>historique des prix par quintal</title>
</head>
<body>
<!-- Le tableau est défini ici avec une bordure de 2 pixels, et le style collapse est appliqué pour fusionner les bordures des cellules. -->
<table border="2" style="border-collapse:collapse;">
    <thead>
    <tr>
        <th>Date</th>
        <th>Prix Quintal</th>
    </tr>
    </thead>
    <tbody>
    <!-- La boucle for itère sur tous les objets de l'historique des prix et affiche les informations dans une ligne de la table. -->
    {% for histo in historique_prix_achat_quintal %}
        <tr>
            <td>{{ histo.date }}</td>
            <td>{{ histo.prix }}</td>
        </tr>
        {% empty %}
        <!-- Si aucun historique n'est trouvé pour le produit, un message est affiché. -->
        <tr>
            <td colspan="6">Aucun Historique trouvé.</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

</body>
</html>
